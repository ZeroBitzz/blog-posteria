<main class="w-500 m-auto">
  <form action="/create-post" method="post">
    <h1 class="h3 mb-3 fw-normal">Create post</h1>

    <div class="form-group">
      <input required type="text" class="form-control" id="title" name="title" placeholder="Title">
    </div>

    <div class="form-group">
      <textarea required class="form-control" class="form-control" id="body" name="body" placeholder="Body" rows="10"></textarea>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Create post</button>

  </form>
</main>